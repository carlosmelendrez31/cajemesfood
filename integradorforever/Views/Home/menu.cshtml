
@{
    ViewData["Title"] = "menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu del Restaurante</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div class="container my-5">
            <div class="row">
                <!-- Card 1 -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content("~/img/alitas de pollo.jpg")" class="card-img-top" alt="alitas">
                        <div class="card-body">
                            <h5 class="card-title">alitas</h5>
                            <p class="card-text">Ricas Alitas de pollo bañadas en salsa de su elección</p>
                            <p class="card-text"><strong>$140.00</strong></p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <!-- Card 2 -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content("~/img/bongles.jpeg")" class="card-img-top" alt="boneless">
                        <div class="card-body">
                            <h5 class="card-title">boneless</h5>
                            <p class="card-text">Rica pechuga de pollo empanizada bañada con salsa de su elección</p>
                            <p class="card-text"><strong>$120.00</strong></p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <!-- Card 3 -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content("~/img/carne asada.jpg")" class="card-img-top" alt="Tacos de carne asada">
                        <div class="card-body">
                            <h5 class="card-title">Tacos de carne asada</h5>
                            <p class="card-text">Orden de 3 tacos de carne asada</p>
                            <p class="card-text"><strong>$90.00</strong></p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <!-- Card 4 -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content("~/img/desayuno.jpg")" class="card-img-top" alt="Desayuno">
                        <div class="card-body">
                            <h5 class="card-title">Desayuno</h5>
                            <p class="card-text">Contiene huevo con complemento de su elección y frijoles.</p>
                            <p class="card-text"><strong>$45.00</strong></p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <!-- Card 5 -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content("~/img/pechuga de pollo.jpg")" class="card-img-top" alt="Pechuga de pollo">
                        <div class="card-body">
                            <h5 class="card-title">Pechuga de pollo</h5>
                            <p class="card-text">Pechuga de pollo a la plancha con crema y verduras para acompañar.</p>
                            <p class="card-text"><strong>$76.00</strong></p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <!-- Card 6 -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content("~/img/pizza.jpg")" class="card-img-top" alt="Pizza">
                        <div class="card-body">
                            <h5 class="card-title">Pizza</h5>
                            <p class="card-text">Pizza familiar 2 ingredientes</p>
                            <p class="card-text"><strong>$130.00</strong></p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <!-- Card 7 -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content("~/img/quezabirria.jpg")" class="card-img-top" alt="Quezabirria">
                        <div class="card-body">
                            <h5 class="card-title">Quezabirria</h5>
                            <p class="card-text">Birria con queso en taco</p>
                            <p class="card-text"><strong>$45.00 c/u</strong></p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
                <!-- Card 8 -->
                <div class="col-md-3 mb-4">
                    <div class="card">
                        <img src="@Url.Content("~/img/sushi.jpg")" class="card-img-top" alt="Sushi">
                        <div class="card-body">
                            <h5 class="card-title">Sushi</h5>
                            <p class="card-text">Rollo de Sushi California.</p>
                            <p class="card-text"><strong>$90.00</strong></p>
                            <a href="#" class="btn btn-primary">Comprar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS and dependencies -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    </div>
</body>
</html>


