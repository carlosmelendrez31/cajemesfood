        <h2 class="mt-5 mb-4">Carrito de Compras</h2>

        @if (ViewBag.Carrito != null && (ViewBag.Carrito as List<carritomodel>)?.Any() == true)
        {
            <div class="row">
                @foreach (var item in ViewBag.Carrito as List<carritomodel>)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@item.Nombre</h5>
                                <p class="card-text">Precio: @item.Precio.ToString("C")</p>
                                <p class="card-text">Cantidad: @item.Cantidad</p>
                                <p class="card-text">Total: @(item.Precio * item.Cantidad).ToString("C")</p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <form asp-action="ComprarTodo" method="post">
                <button type="submit" class="btn btn-success">Comprar Todo</button>
            </form>
        }
