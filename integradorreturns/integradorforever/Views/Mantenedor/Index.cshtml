
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/layoutadmin.cshtml";
}
<div class="container mt-5">
    <div class="row">
        <!-- Primera columna -->
        <div class="col-md-4">
            <div class="card">
                <img src="@Url.Content("~/img/usuarios.jfif")" class="card-img-top" alt="Usuarios">
                <div class="card-body">
                    <h5 class="card-title">Ver Usuarios</h5>
                    <p class="card-text">Ver la lista de usuarios</p>
                    <a class="btn btn-primary"asp-area="" asp-controller="Mantenedor" asp-action="Listar">Aqui</a>
                    
                </div>
            </div>
        </div>

        <!-- Segunda columna -->
        <div class="col-md-4">
            <div class="card">
                <img src="@Url.Content("~/img/comida.jfif")" class="card-img-top" alt="Compras">
                <div class="card-body">
                    <h5 class="card-title">Ver Compras</h5>
                    <p class="card-text">Ver las compras</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="carrito" asp-action="Listarcompra">Aqui</a>
                </div>
            </div>
        </div>

        <!-- Tercera columna -->
        <div class="col-md-4">
            <div class="card">
                <img src="@Url.Content("~/img/admin.jfif")" class="card-img-top" alt="Administrador">
                <div class="card-body">
                    <h5 class="card-title">Lista de administradores</h5>
                    <p class="card-text">Administradores de cajemesfood.</p>
                    <a class="btn btn-primary" asp-area="" asp-controller="Admin" asp-action="Listaradmin">Aqui</a>
                </div>
            </div>
        </div>

        <!-- Cuarta columna -->
        
    </div>
</div>



