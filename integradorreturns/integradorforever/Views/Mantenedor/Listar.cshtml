@model List<Usuariomodel>
@{
    ViewData["Title"] = "Listar";
    Layout = "~/Views/Shared/layoutadmin.cshtml";
}

<div class="card">
    <div class=" card-header">USUARIOS CAJEMES'FOOD</div>
    <div class="card-body">
        <a asp-action="Guardar" asp-controller="Mantenedor" class="btn btn-success">Crear nuevo</a>
        <table class="table table-bordered">
            <thead>
    <tr>
       <th> Nombre</th>
       <th>Contrasena </th>
       <th> Telefono</th>
        <th> </th>
        
    </tr>
    </thead>
    <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.Nombre</td>
                         <td>@item.contrasena</td>
                        <td>@item.Telefono</td>
                        <td><a asp-action="Editar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-id_usuario="@item.id_usuario">Editar</a></td>
                        <td><a asp-action="Eliminar" asp-controller="Mantenedor" class="btn btn-primary btn-sm" asp-route-id_usuario="@item.id_usuario">Eliminar</a></td>
                    </tr>
                }
            </tbody>
</table>
    </div>
</div>

